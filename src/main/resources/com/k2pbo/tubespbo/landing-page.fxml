<?xml version="1.0" encoding="UTF-8"?>

<!-- Import statements -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<!-- Root container untuk landing page -->
<VBox alignment="CENTER" spacing="20.0" styleClass="landing-container, root" 
      stylesheets="@styles-landing.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.k2pbo.tubespbo.LandingController">
    
    <!-- Padding untuk konten -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Title dan welcome messages -->
    <Label styleClass="app-title" text="Contact Manager"/>
    <Label styleClass="welcome-text" text="Selamat datang di Contact Manager"/>
    <Label styleClass="sub-text" text="Aplikasi pengelolaan kontak yang mudah dan efisien"/>
    
    <!-- Navigation button -->
    <Button styleClass="enter-button" text="Mulai Aplikasi" onAction="#switchToContactView"/>
</VBox>
